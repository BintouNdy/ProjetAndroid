<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_spe" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            tools:ignore="MissingConstraints,UselessParent">

            <android.support.design.widget.CheckableImageButton
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:src="@drawable/box"
                android:textSize="70sp" />

            <android.support.design.widget.CheckableImageButton
                android:id="@+id/two"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@id/one"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@id/one"
                android:src="@drawable/box"
                android:textSize="70sp" />

            <android.support.design.widget.CheckableImageButton
                android:id="@+id/three"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@id/two"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@id/two"
                android:padding="0dp"
                android:src="@drawable/box"
                android:textSize="70sp" />

            <android.support.design.widget.CheckableImageButton
                android:id="@+id/four"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/one"
                android:layout_marginStart="5dp"
                android:src="@drawable/box"
                android:textSize="70sp" />

            <android.support.design.widget.CheckableImageButton
                android:id="@+id/five"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@id/four"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@id/four"
                android:src="@drawable/box"
                android:textSize="70sp" />

            <android.support.design.widget.CheckableImageButton
                android:id="@+id/six"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@id/five"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@id/five"
                android:src="@drawable/box"
                android:textSize="70sp" />

            <android.support.design.widget.CheckableImageButton
                android:id="@+id/seven"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/four"
                android:layout_marginStart="5dp"
                android:src="@drawable/box"
                android:textSize="70sp" />

            <android.support.design.widget.CheckableImageButton
                android:id="@+id/eight"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@id/seven"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@id/seven"
                android:src="@drawable/box"
                android:textSize="70sp" />

            <android.support.design.widget.CheckableImageButton
                android:id="@+id/nine"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@id/eight"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@id/eight"
                android:src="@drawable/box" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtMorpion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:id="@+id/btnRestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="restart"
            android:text="Nouvelle Partie" />
    </LinearLayout>

</LinearLayout>